<% if flash[:signed_up] %>
  <script>
    window.analytics.alias("<%= current_user.id %>");
  </script>
<% end %>

<% if signed_in? %>
  <script>
    window.analytics.identify(
      "<%= current_user.id %>",
      <%= raw identify_hash.to_json %>,
      <%= raw intercom_hash.to_json %>
    );
  </script>
<% else %>
  <script>
    var links = document.getElementsByClassName("auth");

    for (var i = 0; i < links.length; i++) {
      window.analytics.trackLink(
        links[i],
        "Clicked Sign In",
        { variation: <%= ab_test "auth_button" %> }
      );
    }
  </script>
<% end %>

<% if flash[:signed_up] %>
  <script>
    window.analytics.track("Signed Up", <%= raw campaign_hash.to_json %>);
  </script>
<% end %>

<script>
  window.analytics.page(
    "<%= escape_javascript content_for(:page_title) %>",
    <%= raw campaign_hash.to_json %>
  );
</script>

<%= yield :analytics %>
